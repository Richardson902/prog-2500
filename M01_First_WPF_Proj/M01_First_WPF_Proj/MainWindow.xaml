<Window x:Class="M01_First_WPF_Proj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M01_First_WPF_Proj"
        mc:Ignorable="d"
        Title="MainWindow" Height="1050" Width="1250">
    <Grid x:Name="myGrid">
        <Canvas x:Name="myCanvas" HorizontalAlignment="Left" Height="1000" Margin="230,17,0,0" VerticalAlignment="Top" Width="1000"/>
        <Grid x:Name="myGrid2" Margin="0,0,1030, 290">
            <Menu x:Name="menu" IsMainMenu="True" Height="20" Margin="10,0,0,0" VerticalAlignment="Top" >
                <MenuItem Header="MainMenu">
                    <MenuItem Header="_Face" >
                        <MenuItem Header="_New Face" Click="OnButtonClicked" InputGestureText="ctrl+n" />
                        <MenuItem Header="_Random Face" Click="OnButtonClicked"  InputGestureText="ctrl+r" />
                        <MenuItem Header="_Hairsyle">
                            <MenuItem Header="_Next" Command="{Binding nextHairCMD}" InputGestureText="ctrl+r"/>
                            <MenuItem Header="_Prev" Command="{Binding prevHairCMD}" InputGestureText="h+["/>
                        </MenuItem>
                        <MenuItem Header="_Eye Type">
                            <MenuItem Header="_Next" Command="{Binding nextEyesCMD}"/>
                            <MenuItem Header="_Prev" Command="{Binding prevEyesCMD}"/>
                        </MenuItem>
                        <MenuItem Header="_Nose Type">
                            <MenuItem Header="_Next" Command="{Binding nextNoseCMD}"/>
                            <MenuItem Header="_Prev" Command="{Binding prevNoseCMD}"/>
                        </MenuItem>
                        <MenuItem Header="_Mouth Type">
                            <MenuItem Header="_Next" Command="{Binding nextMouthCMD}"/>
                            <MenuItem Header="_Prev" Command="{Binding prevMouthCMD}"/>
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="MenuItem" />
                    <MenuItem Header="MenuItem" />
                </MenuItem>
            </Menu>
            <Border BorderBrush="Black"  BorderThickness="2" Margin="10,40,-10,-10" HorizontalAlignment="Left" >
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Border BorderBrush="red"  BorderThickness="2" Margin="10" Height="120" Width="120">
                        <StackPanel>
                            <Label Content="Hairstyle" Width="76" Margin="10" HorizontalContentAlignment="Center"/>
                            <Button x:Name="hair_next" Content="Next" Width="76" Margin="10" Click="OnButtonClicked"/>
                            <Button x:Name="hair_prev" Content="Previous" Width="76" Click="OnButtonClicked"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="red" BorderThickness="2" Margin="10" Height="120" Width="120">
                        <StackPanel>
                            <Label Content="Eye Type" Width="76" Margin="10" HorizontalContentAlignment="Center"/>
                            <Button x:Name="eyes_next" Content="Next" Width="76" Margin="10" Click="OnButtonClicked"/>
                            <Button x:Name="eyes_prev" Content="Previous" Width="76" Click="OnButtonClicked"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="red" BorderThickness="2" Margin="10" Height="120" Width="120">
                        <StackPanel>
                            <Label Content="Nose" Width="76" Margin="10" HorizontalContentAlignment="Center"/>
                            <Button x:Name="nose_next" Content="Next" Width="76" Margin="10" Click="OnButtonClicked"/>
                            <Button x:Name="nose_prev" Content="Previous" Width="76" Click="OnButtonClicked"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="red" BorderThickness="2" Margin="10" Height="120" Width="120">
                        <StackPanel>
                            <Label Content="Mouth" Width="76" Margin="10" HorizontalContentAlignment="Center"/>
                            <Button x:Name="mouth_next" Content="Next" Width="76" Margin="10" Click="OnButtonClicked"/>
                            <Button x:Name="mouth_prev" Content="Previous" Width="76" Click="OnButtonClicked"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="purple" BorderThickness="2" Margin="10" Height="120" Width="120">
                        <StackPanel>
                            <Label Content="Randomize" Width="76" Margin="10" HorizontalContentAlignment="Center"/>
                            <Button x:Name="randomize" Content="Random" Width="76" Margin="10" Click="OnButtonClicked"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
