<Window x:Class="M01_First_WPF_Proj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M01_First_WPF_Proj"
        mc:Ignorable="d"
        Title="MainWindow" Height="1050" Width="1250">
    <Grid x:Name="myGrid">
        <Canvas x:Name="myCanvas" HorizontalAlignment="Left" Height="1000" Margin="230,17,0,0" VerticalAlignment="Top" Width="1000">
        </Canvas>
        <Grid x:Name="myGrid2" Margin="0,0,1030, 290">
            <Border BorderBrush="Black"  BorderThickness="2" Margin="10,10,-10,-10" HorizontalAlignment="Left" >
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Border BorderBrush="red"  BorderThickness="2" Margin="10" Height="120" Width="120">
                        <StackPanel x:Name="hairCheckboxes">
                            <Label Content="Hairstyle" Width="76" Margin="10" HorizontalContentAlignment="Center"/>
                            <CheckBox x:Name="hair_01" Content="1" HorizontalAlignment="Center" Click="OnCheckClicked"/>
                            <CheckBox x:Name="hair_02" Content="2" HorizontalAlignment="Center" Margin="10" Click="OnCheckClicked"/>
                            <CheckBox x:Name="hair_03" Content="3" HorizontalAlignment="Center" Click="OnCheckClicked"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="red" BorderThickness="2" Margin="10" Height="120" Width="120">
                        <StackPanel>
                            <Label Content="Eye Type" Width="76" Margin="10" HorizontalContentAlignment="Center"/>
                            <ComboBox x:Name="eyeComboBox" Width="120" HorizontalAlignment="Center" HorizontalContentAlignment="Center" SelectionChanged="OnComboBoxChanged">
                                <ComboBox.Items>
                                    <ComboBoxItem Content="1"/>
                                    <ComboBoxItem Content="2"/>
                                    <ComboBoxItem Content="3"/>
                                </ComboBox.Items>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="red" BorderThickness="2" Margin="10" Height="120" Width="120">
                        <StackPanel x:Name="radioButtons">
                            <Label Content="Nose" Width="76" Margin="10" HorizontalContentAlignment="Center"/>
                            <RadioButton Content="1" HorizontalAlignment="Center" Checked="OnRadioChecked"/>
                            <RadioButton Content="2" HorizontalAlignment="Center" Margin="10" Checked="OnRadioChecked"/>
                            <RadioButton Content="3" HorizontalAlignment="Center" Checked="OnRadioChecked"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="red" BorderThickness="2" Margin="10" Height="120" Width="120">
                        <StackPanel>
                            <Label Content="Mouth" Width="76" Margin="10" HorizontalContentAlignment="Center"/>
                            <Slider x:Name="mouthSlider" Width="120" HorizontalAlignment="Center" ValueChanged="OnSliderChanged" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" SelectionEnd="3" SelectionStart="1" Value="2" Minimum="1" Maximum="3"/>
                        </StackPanel>
                    </Border>
                    <Border BorderBrush="purple" BorderThickness="2" Margin="10" Height="120" Width="120">
                        <StackPanel>
                            <Label Content="Randomize" Width="76" Margin="10" HorizontalContentAlignment="Center"/>
                            <Button x:Name="randomize" Content="Random" Width="76" Margin="10" Click="RandomizeChoice"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
